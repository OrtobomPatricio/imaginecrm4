# Deploy Environment Variables
# Copy this file to .env on your VPS

# --- Database ---
MYSQL_ROOT_PASSWORD=secure_root_password_here
MYSQL_DATABASE=chin_crm
MYSQL_USER=crm
MYSQL_PASSWORD=secure_db_password_here

# --- App Security ---
JWT_SECRET=generate_a_secure_random_string_here_min_32_chars
DATA_ENCRYPTION_KEY=needs_to_be_exactly_32_chars_long!!
# ID único del propietario (para seguridad crítica). Generar con: openssl rand -hex 16
OWNER_OPEN_ID=
BOOTSTRAP_ADMIN_EMAIL=admin@tudominio.com
BOOTSTRAP_ADMIN_PASSWORD=admin_secure_password

# --- App Config ---
PORT=3000
VITE_APP_ID=imagine-crm-pro
# URL donde estará alojado el CRM (ej: https://crm.tuexcelencia.com)
VITE_OAUTH_PORTAL_URL=https://tu-dominio-vps.com

# --- WhatsApp API (Optional) ---
WHATSAPP_WEBHOOK_VERIFY_TOKEN=tu_token_verificacion_seguro
WHATSAPP_APP_SECRET=
WHATSAPP_ACCESS_TOKEN=

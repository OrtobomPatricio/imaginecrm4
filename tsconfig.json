{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./client/src/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "client/src",
    "client/vite.config.ts",
    "vite.config.ts",
    "api/**/*"
  ],
  "exclude": [
    "server",
    "dist",
    "node_modules",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}